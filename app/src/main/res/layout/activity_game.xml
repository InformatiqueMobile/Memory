<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_wood_table"
    tools:context="com.memory.memory.GameActivity">


    <GridView
        android:layout_width="900dp"
        android:layout_height="match_parent"
        android:id="@+id/gameGrid"
        android:numColumns="6"
        android:choiceMode="multipleChoice"
        android:clickable="true"
        android:columnWidth="@dimen/GridItems"
        android:gravity="center"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_toLeftOf="@+id/imageRed"
        android:layout_toStartOf="@+id/imageRed"
        android:layout_below="@+id/textView"
        android:layout_alignBottom="@+id/playerOneTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player 1"
        android:id="@+id/playerOneTextView"
        android:textColor="@color/link_text_material_light"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player 2"
        android:id="@+id/playerTwoTextView"
        android:textColor="@color/link_text_material_light"
        android:layout_gravity="right|top"
        android:layout_alignTop="@+id/playerOneTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageGreen"
        android:src="@drawable/circle_green"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageRed"
        android:src="@drawable/circle_red"
        android:layout_alignTop="@+id/imageGreen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Memory"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />


</RelativeLayout>
